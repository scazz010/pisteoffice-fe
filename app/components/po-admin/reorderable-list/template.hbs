{{#sortable-group tagName="ul" onChange=reorder as |group|}}
  {{#each model as |listItem|}}
    {{#sortable-item tagName="li" model=listItem group=group handle=".iDragHandle"}}
      <i local-class="dragHandle" class="fa fa-arrows-v iDragHandle"></i>
      {{#link-to editRoute listItem local-class="editModelLink"}}
        <div local-class="row">
          {{yield listItem}}
        </div>
      {{/link-to}}
    {{/sortable-item}}
  {{else}}
    <div local-class="empty-list">
      {{emptyMessage}}
    </div>
  {{/each}}
{{/sortable-group}}
