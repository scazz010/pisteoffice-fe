<div class="{{styles.spacer}}"></div>

{{#sortable-group tagName="ul" onChange=reorder as |group|}}
  {{#each model as |listItem|}}
    {{#sortable-item tagName="li" model=listItem group=group handle=".iDragHandle"}}
        <i class="fa fa-arrows-v iDragHandle {{styles.dragHandle}}"></i>
        <div class="{{styles.row}}">
          {{yield listItem}}
        </div>

    {{/sortable-item}}
  {{/each}}
{{/sortable-group}}
